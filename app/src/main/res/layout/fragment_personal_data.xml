<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="344dp"
            android:layout_height="579dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rectangle" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:id="@+id/nameSurname"
            android:layout_width="220dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="150dp"
            android:textColorHint="@color/text"
            app:boxBackgroundMode="none"
            android:clickable="false"
            app:boxStrokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintStart_toStartOf="@+id/rectangle"
            app:layout_constraintTop_toTopOf="@+id/rectangle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameSurnameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="@string/name_and_surname"
                android:clickable="false"
                android:inputType="text"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailPersonalData"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="50dp"
            android:textColorHint="@color/text"
            app:boxBackgroundMode="none"
            android:clickable="false"

            app:boxStrokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintStart_toStartOf="@+id/rectangle"
            app:layout_constraintTop_toTopOf="@+id/rectangle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="@string/hintEmail"
                android:inputType="text"
                android:clickable="false"

                android:textColor="@color/text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextPassword"
            android:layout_width="220dp"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:textColorHint="@color/text"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintStart_toStartOf="@+id/rectangle"
            app:layout_constraintTop_toTopOf="@+id/rectangle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:clickable="false"
                android:hint="@string/hintPassword"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/backButton"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:layout_marginTop="380dp"
            android:backgroundTint="@color/buttonQueries"
            android:fontFamily="@font/inter"
            android:text="@string/back"
            android:textColor="@color/toastBackground"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.729"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:layout_marginTop="380dp"
            android:backgroundTint="@color/buttonQueries"
            android:fontFamily="@font/inter"
            android:text="@string/save"
            android:textColor="@color/toastBackground"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <ImageView
            android:id="@+id/editNameButton"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toEndOf="@+id/nameSurname"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:srcCompat="@drawable/editicon" />

        <ImageView
            android:id="@+id/editEmailButton"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginTop="176dp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toEndOf="@+id/emailPersonalData"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:srcCompat="@drawable/editicon" />

        <ImageView
            android:id="@+id/editPasswordButton"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginTop="284dp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toEndOf="@+id/editTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:srcCompat="@drawable/editicon" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>