<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@drawable/imageninicio">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="171dp"
        android:layout_height="131dp"
        android:layout_marginTop="368dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="240dp"
        android:layout_height="236dp"
        app:cpb_background_progressbar_color="@color/splashText"
        app:cpb_background_progressbar_width="12dp"
        app:cpb_indeterminate_mode="true"
        app:cpb_progress="0"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="50"
        app:cpb_progressbar_color="@color/buttons"
        app:cpb_progressbar_color_direction="left_to_right"
        app:cpb_progressbar_width="14dp"
        app:cpb_round_border="true"
        app:cpb_start_angle="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

</androidx.constraintlayout.widget.ConstraintLayout>